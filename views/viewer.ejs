<%- include("partials/header.ejs") %>

<% if (locals.post) {%>
    <article class="container">
        <h2 class="text-center text-white my-3 py-3"><%= post.title %></h2>
        <div class="grid">
            <div class="g-col-6 my-3 py-3">
                <div class="card text-bg-secondary shadow">
                    <div class="card-body">
                        <pre class="card-text text-white"><%= post.content %></pre>
                    </div>
                    <div class="card-footer blog-post-meta">
                        <%=post.date%>
                    </div>
                </div>
            </div>
        </div>
    </article>
<%}%>





<%- include("partials/footer.ejs") %>