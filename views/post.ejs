<%- include("partials/header.ejs") %>

<div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <div class="card shadow">
          <div class="card-body">
            <h3 class="card-title mb-4">Create a post</h3>

            <form action="/submit-post" method="POST">
              <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Leave the title here" required>
              </div>

              <div class="mb-3">
                <label for="content" class="form-label">Content:</label>
                <textarea class="form-control" id="content" name="content" rows="8" placeholder="Leave the text content here" required></textarea>
              </div>

              <button type="submit" class="btn btn-warning shadow">Post</button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>

<%- include("partials/footer.ejs") %>